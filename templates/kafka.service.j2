[Unit]
Description=Kafka Daemon
After=zookeeper.service

[Service]
Type=simple
User={{ kafka_user }}
Group={{ kafka_group }}
LimitNOFILE=32768
Restart=on-failure
Environment="KAFKA_HEAP_OPTS={{ kafka_heap_opts }}:JMX_PORT={{ kafka_jmx_port }}"
ExecStart={{ kafka_app_dir }}/bin/kafka-server-start.sh {{ kafka_conf_dir }}/server.properties

[Install]
WantedBy=multi-user.target
